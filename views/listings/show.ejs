<% layout("layouts/boilerplate") %>

    <body>
        <div class="container mt-4 ">
            <h2>
                <%= listing.title %>
            </h2>
            <div class="row justify-content-center">
                <div class="col-md-8 offset-3">
                    <div class="card mt-3 mb-3 display-card">
                        <img src="<%= listing.image %>" class="card-img-top show-img" alt="Property view">
                        <div class="card-body mt-3 ">
                            <div class="details ">
                                <div class="description pb-2 row-5">
                                    <p>Description: <%= listing.description %>
                                    </p>
                                </div>
                                <div class="extra ">

                                    <p>Price: â‚¹<%= listing.price.toLocaleString("en-IN") %>/night</p>
                                    <p>Location: <%= listing.location %>
                                    </p>
                                    <p>Country: <%= listing.country %>
                                    </p>
                                </div>
                            </div>

                        </div>
                    </div>

                    <div class="row mt-4 offset-2 btns">
                        <div class="col-auto">
                            <form action="/listings/<%= listing._id %>/edit" method="get">
                                <button type="submit" class="btn  edit-btn px-4">Edit</button>
                            </form>
                        </div>
                        <div class="col-auto">
                            <form action="/listings/<%= listing._id %>?_method=delete" method="post">
                                <button type="submit" class="btn btn-dark px-4">Delete</button>
                            </form>
                        </div>
                    </div>
                    <hr class="mt-3 ">
                    <div>
                        <h3>Leave a Review</h3>
                        <form class="mt-3 mb-3 needs-validation" action="/listings/<%= listing._id %>/reviews"
                            method="post" novalidate>
                            <div class="mb-3 offset-1">
                                <label for="rating" class="form-label">Rating: </label>
                                <input type="range" min="1" max="5" id="rating" name="review[rating]"
                                    class="form-control form-range" step="1">
                                <div class="invalid-feedback">
                                    Give a rating
                                </div>
                            </div>
                            <div class="mb-3 offset-1">
                                <label for="comment" class="form-label">Comment: </label>
                                <textarea rows="5" cols="30" class="form-control" placeholder="Enter your comment"
                                    name="review[comment]" id="comment" required></textarea>
                                <div class="invalid-feedback">
                                    Write a comment
                                </div>
                            </div>
                            <button class="btn btn-outline-dark d-block mx-auto">POST</button>
                        </form>
                    </div>
                    <div class="review-box">
                        <hr>
                        <h3>Reviews</h3>
                        <% if(listing.reviews.length==0){ %>
                            <h5 class="opacity-75 d-flex justify-content-center mb-5">- No reviews -</h5>
                            <% } else { %>
                                <div class="row">
                                    <% for (const review of listing.reviews) { %>
                                        <div class="review card  mt-3 mb-3">
                                            <div class="reviewbody card-body">
                                                <h5 class="card-title">User Id: <%= review._id %>
                                                </h5>
                                                <p class="reviewtext card-text" id="comment-<%= review._id %>">
                                                    <%= review.comment %>
                                                </p>
                                                <span class="btn btn-link-dark p-0 text-decoration-none showbtn"
                                                    onclick="toggleComment('<%= review._id %>')">Show more</span>
                                                <p class="card-text">
                                                    <%= review.rating %> stars
                                                </p>
                                                <form action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=delete" method="post" class="reviewdelete">
                                                    <button class="btn btn-sm btn-dark">Delete</button>
                                                </form>
                                            </div>
                                        </div>
                                        <% } %>
                                            <% } %>
                                </div>
                    </div>
                </div>
            </div>
        </div>

    </body>